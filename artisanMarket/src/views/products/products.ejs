<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include ('../partials/head') %>

    <body>
        <!-- Header -->
        <%- include ('../partials/header') %>

            <!-- todos los productos -->
            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Todos los productos</h2>
                    </div>
                    <table class="col-12">
                        <thead>
                            <td>id</td>
                            <td>Nombre</td>
                            <td>Precio</td>
                            <td>Categoria</td>
                            <td>Acciones</td>
                            <td><button class="btn btn-primary"> Crear nuevo</button></td>
                        </thead>
                        <tbody>
                            <% products.forEach(product=> { %>
                                <tr>
                                    <td>
                                        <%= product.id %>
                                    </td>
                                    <td>
                                        <%= product.name %>
                                    </td>
                                    <td>
                                        <%= product.price %>
                                    </td>
                                    <td>
                                        <%= product.category %>
                                    </td>
                                    <td>
                                        <a href="/products/<%= product.id %>" class="btn btn-info">Detalle</a>
                                        <a href="/products/edit/<%= product.id %>" class="btn btn-success">Editar</a>

                                        <form action="/products/<%= product.id %>?_method=DELETE" method="post"
                                            class="d-inline">
                                            <button class="btn btn-danger">Borrar</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>

                    </table>
                </div>
            </div>
            <!-- Footer -->
            <%- include('../partials/footer') %>
    </body>

</html>